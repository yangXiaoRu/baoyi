<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="#F0F0F0"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/issueactivity_button"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/teachera"
            android:text="返回"
            android:textColor="#ea8010"
            android:textSize="14dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="发布"
            android:textColor="#ea8010"
            android:textSize="14dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#BDB76B" />

    <EditText
        android:id="@+id/issueactivity_editText1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:background="#00000000"
        android:hint="物品名称"
        android:inputType="text"
        android:textSize="13dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#BDB76B" />

    <EditText
        android:id="@+id/issueactivity_editText2"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="#00000000"
        android:gravity="top"
        android:hint="描述一下你的物品"
        android:inputType="text"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/issueactivity_button1"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:background="@drawable/shape_imageview"
            android:text="添加图片"
            android:textColor="#808080"
            android:textSize="13dp" />

        <Button
            android:id="@+id/issueactivity_button2"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_imageview"
            android:text="添加图片"
            android:textColor="#808080"
            android:textSize="13dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/issueactivity_button3"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_imageview"
            android:text="添加图片"
            android:textColor="#808080"
            android:textSize="13dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/issueactivity_button4"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_imageview"
            android:text="添加图片"
            android:textColor="#808080"
            android:textSize="13dp"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#BDB76B" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fenlei"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@+id/fenlei_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="选择分类"
                android:textColor="#4d4d4d" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#BDB76B" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="数量"
            android:textSize="13dp" />

        <Button
            android:id="@+id/minus_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="3.5dp"
            android:text="-"
            android:textColor="#808080" />

        <EditText
            android:id="@+id/issueactivity_editText3"
            android:layout_width="45dp"
            android:layout_height="fill_parent"
            android:background="#00000000"
            android:gravity="center"
            android:text="1"
            android:textColor="#808080" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="3.5dp"
            android:text="+"
            android:textColor="#808080" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#BDB76B" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="原价"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/issueactivity_editText4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:background="#00000000"
                android:hint="$0"
                android:inputType="text"
                android:textColor="#808080"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="想卖"
                android:textSize="13dp" />

            <EditText
                android:id="@+id/issueactivity_editText5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:background="#00000000"
                android:hint="$0"
                android:inputType="text"
                android:textColor="#808080"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#BDB76B" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/issueactivity_editText6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:background="#00000000"
                android:hint="出版社"
                android:inputType="text"
                android:textColor="#808080"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/issueactivity_editText7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="25dp"
                android:background="#00000000"
                android:hint="作者"
                android:inputType="text"
                android:textColor="#808080"
                android:textSize="13dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#BDB76B" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <Button
            android:id="@+id/issueactivity_button5"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="#7FFFD4"
            android:text="确认发布"
            android:textColor="#ea8010"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>