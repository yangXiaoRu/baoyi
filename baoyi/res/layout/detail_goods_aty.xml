<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager
                android:id="@+id/goods_viewpager"
                android:layout_width="match_parent"
                android:layout_height="200dip" />

            <Button
                android:id="@+id/discover_goods_back"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:background="@drawable/goods_back" />

            <Button
                android:id="@+id/discover_goods_share"
                android:layout_width="35dip"
                android:layout_height="35dip"
                android:layout_gravity="right"
                android:background="@drawable/goods_share" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/discover_goods_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/bg_red"
                android:padding="5dip"
                android:text="全新"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/discover_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/discover_goods_tab"
                android:background="@drawable/bg_red"
                android:padding="5dip"
                android:text="$3000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/discover_goods_seenums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/bg_red"
                android:padding="5dip"
                android:text="浏览12"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_below="@id/discover_goods_tab"
                android:layout_marginBottom="10dip"
                android:layout_marginTop="10dip"
                android:background="#BFBFBF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/discover_goods_head_img"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:background="@drawable/truck" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/discover_goods_head_img"
                android:orientation="vertical"
                android:padding="8dip" >

                <TextView
                    android:id="@+id/sale_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xinwa"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sale_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1小时前"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/discover_goods_save"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/heart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/discover_goods_head_img"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/discover_shop_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买回来以后，没用过几次，低价出售"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:background="@drawable/goods_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="留个言"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_gravity="center"
                android:background="@drawable/goods_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="联系他"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>